<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.mian.motohelper.fragments.GasStationLocationFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner_cities"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@array/cities_List"/>

        <Spinner
            android:id="@+id/spinner_stationType"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:entries="@array/stationType_List"/>

    </LinearLayout>


    <com.google.android.gms.maps.MapView
        android:id="@+id/google_maps"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"/>


</LinearLayout>
