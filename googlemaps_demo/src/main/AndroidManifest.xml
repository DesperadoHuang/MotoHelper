<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.mian.googlemaps_demo"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 允許應用程式訪問網路的訊息-->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- 要使用Google Maps Android API 需要指定以下權限-->
    <!-- 使用網路的權限-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 允許API在裝置的外部儲存區(SD卡)上儲存快取圖資-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- 允許API存取以網頁為基礎的服務(web-based services)-->
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <!-- 以下權限為非必要，主要是用來定位-->
    <!-- 允許API使用WiFi網路或基地台做定位(粗略位置)-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <!-- 允許API使用GPS做定位(精準位置)-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- 設定Google play service lib版本-->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"/>

        <!-- 設定 Google Maps API KEY-->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key"/>

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
